@model System.Data.DataSet
@{
	Layout = "/Views/Shared/_Layout.cshtml";
	this.ViewBag.Title = "MoviePage";
	this.ViewBag.css = new System.String[] { "w3" };
}


<div class="dynamicmovieload w3-col l12">
    <div class="test1">
        <img src=@ViewBag.json.poster alt="A picture of the movie poster" class="movieposter w3-third" />

        <div class="test">
            <a class="w3-btn w3-black w3-hover-green w3-round-xxlarge w3-large" href="javascript:void(0)" onclick="document.getElementById('light').style.display='block';document.getElementById('fade').style.display='block'">Save</a>
        </div>
    </div>

    <div class="moviedetails  w3-col l9">
        <label>Title: @ViewBag.json.title</label><br />
        <label>Year: @ViewBag.json.year</label><br />
        <label>Type: @ViewBag.json.type</label><br />
        <label>Descritpion: @ViewBag.json.plot</label><br />
    </div>
</div>

<!-- This section is for the popup window-->
 <div id="light" class="white_content">
     Please select a list from the drop down:

     <a class="w3-btn w3-black w3-hover-green w3-round-xxlarge w3-large" href="javascript:void(0)" onclick="document.getElementById('light').style.display='none';document.getElementById('fade').style.display='none'">Save to List</a>
     <a class="w3-btn w3-black w3-hover-green w3-round-xxlarge w3-large" href="javascript:void(0)" onclick="document.getElementById('light').style.display='none';document.getElementById('fade').style.display='none'">Cancel</a>
 </div>
 <div id="fade" class="black_overlay"></div>
