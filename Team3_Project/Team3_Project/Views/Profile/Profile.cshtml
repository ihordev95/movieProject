@{
    this.Layout = "/Views/Shared/_Layout.cshtml";
    this.ViewBag.Title = "Profile";
    this.ViewBag.css = new System.String[] { "w3" };
    this.ViewBag.js = new System.String[] { "ajax", "event", "ProfilePage" };
}
@if (this.ViewBag.can_manage)
{
    <h2>Welcome to your profile page @this.ViewBag.user.name !</h2>
}
else
{
    <h2>You are viewing the profile of @this.ViewBag.user.name </h2>
}
<hr />
<div>
    @foreach (Team3_Project.Databases.memdixyp_film.list list in this.ViewBag.list)
    {
        <div>
            <span>
                @list.name
            </span>
            <a class="elements w3-btn w3-black w3-hover-blue w3-round-xxlarge w3-tiny" href="/ViewList/ViewList/@list.identifier">
                View
            </a>
            @if (this.ViewBag.can_manage)
            {
                <a class="elements w3-btn w3-black w3-hover-blue w3-round-xxlarge w3-tiny" href="/ManageList/ManageLists/@list.identifier">
                    Manage
                </a>
            }
        </div>
    }
</div>
@if (this.ViewBag.can_manage)
{
    <div class="test1">
        <div>
            <a class="w3-btn w3-black w3-hover-green w3-round-xxlarge w3-large" id="test1_create">
                Create New List
            </a>
        </div>
    </div>
}
<div id="light" class="white_content">
    Please enter the name of the new list:
    <input type="hidden" name="user" id="user" value="@Session["UserId"]" />
    <input type="text" name="name" id="name" />
    <label>
        <input id="hidden" type="checkbox" value="0" />
        Is hidden?
    </label>
    <a class="w3-btn w3-black w3-hover-green w3-round-xxlarge w3-large" id="save_new_list">
        Save New List
    </a>
    <a class="w3-btn w3-black w3-hover-green w3-round-xxlarge w3-large" id="cancel">
        Cancel
    </a>
</div>
<div id="fade" class="black_overlay">
</div>