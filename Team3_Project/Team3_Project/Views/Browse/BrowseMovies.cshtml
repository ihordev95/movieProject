@{
	this.Layout = "~/Views/Shared/_Layout.cshtml";
	this.ViewBag.Title = "BrowseMovies";
	this.ViewBag.css = new System.String[] { "w3" };
}			<div class="PageHeader">
				<div class="buttonNav">
					<p>Browse/Search for Movies</p>
				</div>
				<div class="buttonNav buttonNav1">
					<form action="~/Profile/Profile" method="get">
						<div class="form-row">
							<div>
								<button id="Profile" type="submit" class="w3-btn w3-black w3-hover-green w3-round-xxlarge w3-large">Profile Page</button>
							</div>
						</div>
					</form>
				</div>
			</div>
			<div class="textSearch">
				<p>Please enter the start of the movie name or the entire movie name and click search</p>

				@using (Html.BeginForm("SearchMovies", "Browse", FormMethod.Get))
				{
					<input type="text" name="title" id="title" />
					<button class="w3-btn w3-black w3-hover-green w3-round-xxlarge w3-large" type="submit">Search</button>

				}
			</div>
			<div class="CurratedListsTable">
				<table class="resultTable1 w3-col l12">
					<tr class="listTitle">
                        <td >
                            5 Newest Action Movies
                        </td>
					</tr>
					<tr class="listMovies">
                        <td>
                            @foreach (Team3_Project.Databases.memdixyp_film.newest_movies_by_genre newest_movies_by_genre in this.ViewBag.action)
                            {
                                <a href="/Movie/MoviePage/@newest_movies_by_genre.tconst" class="elements">
                                    <img alt=@newest_movies_by_genre.primaryTitle class="movieposter1 w3-third" src=@newest_movies_by_genre.poster />
                                </a>
                            }
                        </td>
                    </tr>
					<tr class="listTitle">
                        <td>
                            5 Newest Drama Movies
                        </td>
					</tr>
					<tr class="listMovies">
                        <td>
                            @foreach (Team3_Project.Databases.memdixyp_film.newest_movies_by_genre newest_movies_by_genre in this.ViewBag.drama)
                            {
                                <a href="/Movie/MoviePage/@newest_movies_by_genre.tconst" class="elements">
                                    <img alt=@newest_movies_by_genre.primaryTitle class="movieposter1 w3-third" src=@newest_movies_by_genre.poster />
                                </a>
                            }
                        </td>
                    </tr>
					<tr class="listTitle">
                        <td>
                            5 Movies from a Random List
                        </td>
					</tr>
					<tr class="listMovies">
                        <td></td>
					</tr>
					<tr class="listTitle">
                        <td>
                            5 Random Movie Lists
                        </td>
					</tr>
					<tr class="Lists">
                        <td>
                            @foreach (Team3_Project.Databases.memdixyp_film.list list in this.ViewBag.list)
                            {
                                <a href="/ViewList/ViewList/@list.identifier" class="elements Lists">
                                    @list.name
                                </a>
                            }
                        </td>
                    </tr>
				</table>
			</div>