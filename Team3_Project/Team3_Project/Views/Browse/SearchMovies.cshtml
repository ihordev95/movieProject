
@{
    ViewBag.Title = "SearchMovies";
}

<head>
    <link href="~/Styles/BrowseSearchMovies.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
</head>

<div class="PageHeader">
    <p>Search Results</p>
</div>

<div class="SearchResults">
    <table class="resultTable">
        <tr class="tableHeader">
            <td>Title:</td>
            <td>Year:</td>
        </tr>
        @foreach (var movie in ViewBag.searchResults)
        {
            <tr>

                <td class="tableMovieTitle"><a href="@Url.Action( "MoviePage", "Movie", new { ID = movie.imdbID })" class="elements">@movie.title</a></td>
                <td>@movie.year</td>

            </tr>
        }
    </table>
</div>
